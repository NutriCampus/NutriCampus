<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.nutricampus.app.activities.ListaPropriedadesActivity"
    tools:showIn="@layout/activity_lista_propriedades">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:layout_alignParentLeft="true"
                android:hint="Nome da Propriedade"
                android:layout_weight="1"
                android:id="@+id/input_pesquisar_propriedade"
                android:layout_height="55dp"
                android:layout_width="fill_parent">
            </EditText>

            <Button
                android:drawableLeft="@drawable/ic_search"
                android:text=""
                android:id="@+id/btn_pesquisar_propriedade"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:onClick="atualizaListaPropriedades">
            </Button>
        </LinearLayout>


        <ListView
            android:id="@+id/listaPropriedades"
            android:layout_width="368dp"
            android:layout_height="495dp"
            android:choiceMode="multipleChoice"
            android:listSelector="@color/colorItemListSelected"
            android:longClickable="true"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
