<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nutricampus.app">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RecuperarSenhaActivity"
            android:label="Recuperar senha"
            android:parentActivityName=".activities.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.CadastrarUsuarioActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.CadastrarPropriedadeActivity"
            android:screenOrientation="portrait"
            android:label="Cadastrar Propriedade"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.EditarPropriedadeActivity"
            android:screenOrientation="portrait"
            android:label="Editar Propriedade"
            android:parentActivityName=".activities.MainActivity"/>
    </application>

</manifest>